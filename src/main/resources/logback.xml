<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>employee-management-system.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.example.employeemanagementsystem" level="info" />

    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>